<header class="p-3 bg-dark text-white">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <%= link_to root_url, class: "d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none" do %>
        <svg class="bi me-2" width="40" height="40" role="img" aria-label="Bootstrap">
            <use xlink:href="#logo"></use>
        </svg>
      <% end %>

      <%= nav_bar do %>
        <%= nav_link Project.model_name.human(count: 2), projects_path %>
      <% end %>

      <% if current_user %>
        <div class="dropdown me-2" id="user-box">
          <%= link_to '#', class: 'btn btn-secondary dropdown-toggle', id: 'account-dropdown-menu', data: { "bs-toggle": "dropdown" }, "aria-expanded": true do %>
            <%= t('my_account') %>
          <% end %>
          <ul class="dropdown-menu" aria-labelledby="account-dropdown-menu">
            <li>
              <%= link_to t('preferences'), '#', class: "dropdown-item" %>
            </li>
            <div class="dropdown-divider"></div>
            <li>
              <%= link_to t('logout'), destroy_user_session_path, method: :delete, class: "dropdown-item"  %>
            </li>
          </ul>      
        </div>
      <% end %>
      <small id="locale-selector">
        <%=  locale_selector(I18n.locale) %>      
      </small>  
    </div>
  </div>
</header>