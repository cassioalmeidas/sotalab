<header class="p-3 bg-dark text-white">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <%= link_to root_url, class: "d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none" do %>
        <svg class="bi me-2" width="40" height="40" role="img" aria-label="Bootstrap">
            <use xlink:href="#logo"></use>
        </svg>
      <% end %>

      <%= nav_bar do %>
        <%= nav_link t('header.home', default: 'Home'), root_url %>
      <% end %>

      <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
        <input type="search" class="form-control form-control-dark" placeholder="<%= t('header.search', default: 'Search') %>" aria-label="Search">
      </form>

      <div class="text-end">
        <%= link_to t('header.login', default: 'Login'), root_url, class: "btn btn-outline-light me-2" %>
        <%= link_to t('header.sign_in', default: 'Sign in'), root_url, class: "btn btn-warning" %>
      </div>
    </div>
  </div>
</header>