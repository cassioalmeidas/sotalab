      </p>
      <% if !current_user %>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
          <%= link_to t('register'), new_user_registration_url, class: "btn btn-primary btn-lg px-4 gap-3" %>
          <%= link_to t('login'), new_user_session_url, class: "btn btn-outline-secondary btn-lg px-4" %>
        </div>
      <% end %>
    </div>
  </div>