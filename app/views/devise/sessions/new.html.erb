<div class="px-4 py-5 my-5">
  <div class="form-auth">
    <h2><%= t('.sign_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-floating">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: " " %>
        <%= f.label :email %>
      </div>

      <div class="form-floating">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: " " %>
        <%= f.label :password %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="checkbox mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <%= f.submit t('.sign_in'), class: "w-100 btn btn-lg btn-primary" %>
    <% end %>
    <div class="my-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>