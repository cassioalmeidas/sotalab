<div class="form-auth px-4 py-5 my-5">
  <h2><%= t('.sign_up') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: " " %>
    <%= f.label :email %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: " " %>
    <%= f.label :password %>
  </div>
  <% if @minimum_password_length %>
    <small class="text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
  <% end %> 

  <div class="form-floating">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: " " %>
    <%= f.label :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up'), class: "w-100 btn btn-lg btn-primary" %>
  </div>
  <% end %>
  <div class="my-4">
    <%= render "devise/shared/links" %>
  </div>
</div>